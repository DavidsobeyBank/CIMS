@model IEnumerable<CIMS.Models.Role>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Home Page</h1>
    <p class="lead">Welcome to CIMS - Customer Information Management System</p>
    <div>

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <h2>@item.RoleName</h2>
                <p>@item.RoleDescription</p>
                <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
            </div>
        }
        @if (Model.Count() == 0)
        {
            <p>
                You have no roles assigned to you or your account has not been created
            </p>
        }
    </div>
</div>

