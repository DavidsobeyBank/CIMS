@model IEnumerable<CIMS.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-inline">
    <h2 class="d-inline">Index</h2>

    <p class="pull-right d-inline">
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Activate", "Activate", null, new { @class = "btn btn-outline-primary" })
    </p>
</div>
<table class="table">
    <tr>
        <th>
            Role Name
        </th>
        <th>
            Role Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoleID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoleID })
        </td>
    </tr>
}

</table>
