@model IEnumerable<CIMS.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-inline">
    <h2 class="d-inline">Index</h2>

    <p class="pull-right d-inline">
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-outline-success" })
        @Html.ActionLink("Reactivate", "Activate", null, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Approve", "Approve", null, new { @class = "btn btn-outline-secondary" })
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>Edit</th>
        <th>Info</th>
        <th>Delete</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Approved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            <a href=@Url.Action("Edit", new { id = item.UserID }) class="btn btnsmall btn-primary" >
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
        </td>
        <td>
            <a href=@Url.Action("Details", new { id = item.UserID }) class="btn btnsmall btn-secondary">
                <i class="fa fa-info" aria-hidden="true"></i>
            </a>
        </td>
        <td>
            <a href=@Url.Action("Delete", new { id = item.UserID }) class="btn btnsmall btn-danger justify-content-center">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </a>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btnsmall btn-outline-primary" } ) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.UserID }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.UserID })*@
        </td>
    </tr>
}

</table>
