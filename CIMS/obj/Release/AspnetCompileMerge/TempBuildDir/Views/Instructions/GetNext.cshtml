@model IEnumerable<CIMS.Models.Instruction>

@{
    ViewBag.Title = "GetNext";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Search", "Instructions", FormMethod.Get))
{
    <div class="col-lg-5 pull-right" style="margin-bottom: 10px;">
        <div class="input-group">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
            <div class="input-group-btn">
                <button class="btn btn-outline-primary" type="submit"><i class="fa-search fa"></i></button>
            </div>
        </div>
    </div>
}

<table class="table table-hover table-striped table-sm">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Instruction Type
            </th>
            <th>
                Customer Name
            </th>
            <th></th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstructionType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                <a href=@Url.Action("Comment", new { id = item.InstructionID }) class="btn btn-sm btn-outline-primary justify-content-center">
                    Select
                    <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>
