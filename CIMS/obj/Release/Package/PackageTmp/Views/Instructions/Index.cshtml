@model IEnumerable<CIMS.Models.Instruction>

@{
    ViewBag.Title = "Instruction Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Search")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstructionType.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstructionType.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InstructionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InstructionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InstructionID })
        </td>
    </tr>
}

</table>
